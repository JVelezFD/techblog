
{{!-- posting each post on dashboard --}}

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
    {{#each posts as |post|}}
      {{> dashboardpost post}}
    {{/each}}

</section>
{{/if}}

<button type="submit" class="btn bg-dark"><a class="link" href="/dashboard/new">+ New Post</a></button>

<script src="/js/addpost.js"></script>